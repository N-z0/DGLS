	###
	
	
	### marge entre le text et le bord d'un bouton, ou l'epaisseur d'une ligne de separation
	xthickness = 3
	ythickness = 3
	
	# fg - Sets the foreground color of a widget.
	fg[ACTIVE]        = @text_color # color when pressed
	fg[INSENSITIVE]   = @text_color # disabled
	fg[NORMAL]        = @text_color # Normal mode color
	fg[PRELIGHT]      = @text_color # when mouse is hovering over it
	fg[SELECTED]      = { 1.0, 0.0, 0.0 } # selected or highlighted

	# bg - Sets the background color of a widgets.
	bg[ACTIVE]        = @background_color # color when pressed
	bg[INSENSITIVE]   = @background_color # disabled
	bg[NORMAL]        = @background_color # Normal mode color
	bg[PRELIGHT]      = @background_color # when mouse is hovering over it
	bg[SELECTED]      = { 0.0, 1.0, 0.0 } # selected or highlighted

	# text - Sets the foreground color for widgets that have editable text.
	text[ACTIVE]      = { 0.0, 0.5, 0.0 } # color when pressed
	text[INSENSITIVE] = { 1.0, 0.0, 1.0 } # disabled
	text[NORMAL]      = @edit_text_color # Normal mode color
	text[PRELIGHT]    = @edit_text_color # when mouse is hovering over it
	text[SELECTED]    = { 0.0, 0.75, 0.0 } # selected or highlighted

	# base - Sets the background color for widgets that have editable text. 
	base[ACTIVE]      = @edit_background_color # color when pressed
	base[INSENSITIVE] = { 0.0, 0.0, 1.0 } # disabled
	base[NORMAL]      = @edit_background_color # Normal mode color
	base[PRELIGHT]    = @edit_background_color # when mouse is hovering over it
	base[SELECTED]    = { 0.0, 0.25, 0.0 } # selected or highlighted
	
	engine "redmond95" {}
	#engine "nodoka" {toolbarstyle = 0}
	#engine "murrine" {roundness = 2}
	#engine "clearlooks" {hint = "spinbutton"}
	#engine "industrial" {  hint = "use-hints"  }  # Set a hint to disable backward compatibility fallbacks.
	#engine "mist" { }
	#engine "xfce" {smooth_edge = true}
	#engine "adwaita" { }
	#engine "thinice" { }
	#engine "mgicchikn" { }
	#engine "cleanice" { }
	#engine "aurora" { }
	#engine "bluecurve" { }
	#engine "pixmap" { }
	#engine "ubuntulooks" { }
	#engine "glide" { }
	#engine "hcengine" { }
	#engine "crux-engine" {  }
}






### This line applies the style "default-style" to every widget that is based on GtkWidget. 
### As every widget is based on GtkWidget, it will be used everywhere...
class "GtkWidget" style "default-style"
